<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity"
    android:background="@color/base">

    <ImageView
        android:id="@+id/result_movieposter"
        android:layout_width="150dp"
        android:layout_height="190dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"

        />


    <TextView
        android:id="@+id/result_moviename"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/result_movieposter"
        android:fontFamily="@font/bold"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="MovieName"
        android:textSize="20sp"

        />
    <TextView
        android:id="@+id/result_moviedirector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/result_movieposter"
        app:layout_constraintTop_toBottomOf="@+id/result_moviename"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="MovieName"
        android:textSize="10sp"
        />
    <TextView
        android:id="@+id/result_moviedate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/result_movieposter"
        app:layout_constraintTop_toBottomOf="@+id/result_moviedirector"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="MovieName"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <RatingBar
        android:id="@+id/rating"
        android:isIndicator="true"
        android:max="10"
        android:stepSize="0.01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_movieposter"
        android:backgroundTint="@color/highlight"/>

    <TextView
        android:id="@+id/result_movieinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/rating"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="MovieName"
        android:textSize="20sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>